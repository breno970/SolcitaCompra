@model SolicitaCompra.Models.Produtos

@{
    ViewData["Title"] = "Edit";
}

<div>
    <a class="btn btn-primary" asp-action="Index">Voltar</a>
</div>
<br />

<div class="row">
    <div class="col-md">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div hidden class="form-group col-md">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
            </div>


            <div class="card">
                <div class="card-header">Informações do Produto </div>

                <div class="card-body row">
                    <div class="form-group col-md">
                        <label asp-for="Produto" class="control-label"></label>
                        <input asp-for="Produto" class="form-control" />
                        <span asp-validation-for="Produto" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md">
                        <label asp-for="Codigo" class="control-label"></label>
                        <input asp-for="Codigo" class="form-control" />
                        <span asp-validation-for="Codigo" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md">
                        <label asp-for="ValorQtd" class="control-label"></label>
                        <input asp-for="ValorQtd" class="form-control" />
                        <span asp-validation-for="ValorQtd" class="text-danger"></span>
                    </div>



                </div>

                <div class="card-body row">

                    <div class="form-group col-md">
                        <label asp-for="Descricao" class="control-label"></label>
                        <input asp-for="Descricao" class="form-control" />
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                    </div>

                <div class="card-body row">
                    <div class="form-group col-md">
                        <label asp-for="QtdEstoque" class="control-label"></label>
                        <input asp-for="QtdEstoque" class="form-control" />
                        <span asp-validation-for="QtdEstoque" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md">
                        <label asp-for="QtdMin" class="control-label"></label>
                        <input asp-for="QtdMin" class="form-control" />
                        <span asp-validation-for="QtdMin" class="text-danger"></span>
                    </div>

                </div>

                

            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Alterar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
