@model SolicitaCompra.Models.Produtos

@{
    ViewData["Title"] = "Create";
}
<div>
    <a class="btn btn-primary" asp-action="Index">Voltar</a>
</div>
<br />

<div class="row">
    <div class="col-md">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card">
                <div class="card-header">Informações do Produto </div>

                <div class="card-body row">
                    <div class="form-group col-md">
                        <label for="Produto">Produto *</label>
                        <input id="txtProduto" type="text" name="Produto" placeholder="Produto">
                        <span asp-validation-for="Produto" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md">
                        <label for="Codigo">Código (EAN) *</label>
                        <input id="txtCodigo" type="text" name="Codigo" placeholder="Código (EAN)">
                        <span asp-validation-for="Codigo" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md">
                        <label for="ValorQtd">Valor da Unidade *</label>
                        <input id="txtValorQtd" type="text" name="ValorQtd" placeholder="Valor da Unidade" />
                        <span asp-validation-for="ValorQtd" class="text-danger"></span>
                    </div>
                </div>

                <div class="card-body row">
                    <div class="form-group col-md">
                        <label for="Descricao">Descricao</label>
                        <textarea class="form-control" input id="Descricao" type="text" name="Descricao" placeholder="Complemento"></textarea>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                </div>


                <div class="card-body row">
                    

                    <div class="form-group col-md">
                        <label for="QtdEstoque">Quantidade em Estoque *</label>
                        <input id="txtQtdEstoque" type="text" name="QtdEstoque" placeholder="Quantidade em Estoque" />

                        <span asp-validation-for="QtdEstoque" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md">
                        <label for="QtdMin">Quantidade Miníma *</label>
                        <input id="txtQtdMin" type="text" name="QtdMin" placeholder="Quantidade Miníma Aceita" />

                        <span asp-validation-for="QtdMin" class="text-danger"></span>
                    </div>

                </div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Incluir" class="btn btn-success" />
            </div>
        </form>

    </div>

</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
