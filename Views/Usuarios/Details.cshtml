@model SolicitaCompra.Models.Usuarios

@{
    ViewData["Title"] = "Details";
}

<div>

   
    <div>
        <a class="btn btn-primary" asp-action="Index">Voltar</a>
    </div>
    <br />

    <div class="row">
        <div class="col-md">


            <div class="card">
                <div class="card-header">Informações do Usuário</div>

                <div class="card-body row">


                    <div class="form-group col-md">
                        <label> @Html.DisplayNameFor(model => model.Nome)</label>
                        <input disabled class="form-control" value="@Html.DisplayFor(model => model.Nome)" />
                    </div>


                    <div class="form-group col-md">
                        <label> @Html.DisplayNameFor(model => model.Departamento)</label>
                        <input disabled class="form-control" value="@Html.DisplayFor(model => model.Departamento)" />

                    </div>

                </div>

                <div class="card-body row">

                    <div class="form-group col-md">
                        <label> @Html.DisplayNameFor(model => model.Matricula)</label>
                        <input disabled class="form-control" value="@Html.DisplayFor(model => model.Matricula)" />
                    </div>

                    <div class="form-group col-md">
                        <label> @Html.DisplayNameFor(model => model.Email)</label>
                        <input disabled class="form-control" value="@Html.DisplayFor(model => model.Email)" />
                    </div>

                </div>

            </div>
        </div>
    </div>

</div>
