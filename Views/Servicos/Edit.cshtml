@model SolicitaCompra.Models.Servicos

@{
    ViewData["Title"] = "Editar";
}

<div>
    <a class="btn btn-primary" asp-action="Index">Voltar</a>
</div>
<br />

<div class="row">
    <div class="col-md">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div hidden class="form-group col-md">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
            </div>


            <div class="card">
                <div class="card-header">Informações do Servico</div>

                <div class="card-body row">
                    <div class="form-group col-md">
                        <label asp-for="IdFornecedor" class="control-label"></label>
                        <input asp-for="IdFornecedor" class="form-control" />
                        @*  <select asp-for="IdFornecedor" class="form-control"></select> </label>asp-items="ViewBag.Id"></select> *@
                        <span asp-validation-for="IdFornecedor" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md">
                        <label asp-for="Servico" class="control-label"></label>
                        <input asp-for="Servico" class="form-control" />
                        <span asp-validation-for="Servico" class="text-danger"></span>
                    </div>
                </div>

                <div class="card-body row">
                    <div class="form-group col-md">
                        <label asp-for="Descricao" class="control-label"></label>
                        <input asp-for="Descricao" class="form-control" />
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md">
                        <label asp-for="Prazo" class="control-label"></label>
                        <input asp-for="Prazo" class="form-control" />
                        <span asp-validation-for="Prazo" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Alterar"  class="btn btn-success"/>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
